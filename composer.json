{
    "name": "10n/request-firehose",
    "description": "A simple library to push request metadata into a collection service (like Redis) from multiple sources",
    "type": "library",
    "suggest": {
        "predis/predis": "Required for pushing to Redis",
        "mongodb/mongodb": "Required for pushing to MongoDB"
    },
    "require": {
        "php" : "^5.5 || ^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.5",
        "predis/predis": "^1.1",
        "mongodb/mongodb": "^1.4"
    },
    "autoload": {
        "psr-4": {
            "Magium\\RequestFirehose\\": "src"
        }
    },
    "license": "Apache-2.0",
    "authors": [
        {
            "name": "Kevin Schroeder",
            "email": "kschroeder@mirageworks.com"
        }
    ]
}
